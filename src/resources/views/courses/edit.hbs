<div class="mt-4">
    <h3>Sửa Khóa Học</h3>
    <form class="mt-4" method="POST" action="/courses/{{course._id}}?_method=PUT">
        <div class="form-group">
            <label for="name">Tên Khóa Học</label>
            <input type="text" value="{{course.name}}" class="form-control" id="name" name="name" />
        </div>
        <div class="form-group">
            <label for="description">Mô Tả</label>
            <textarea class="form-control" id="description" name="description">
                {{course.description}}
            </textarea>

        </div>
        <div class="form-group">
            <label for="videoId">Video ID</label>
            <input type="text" value="{{course.videoId}}" class="form-control" id="videoId" name="videoId" />
        </div>
        <div class="form-group">
            <label for="level">Level</label>
            <input type="text" class="form-control" id="level" name="level" />
        </div>
        <button type="submit" value="{{course.level}}" class="btn btn-primary">Sửa Khóa Học</button>
    </form>
</div>